@model IEnumerable<practica01.Models.Producto>


@{
    ViewData["Title"] = "Contacto";
}


<p>
    <a class="btn btn-warning" asp-action="Index" asp-controller="Home">Nueva Venta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Nombre
            </th>
            <th>
                Categoria
            </th>
            <th>
              Precio
            </th>

             <th>
                Descuento
            </th>
        
           <th>Editar Venta</th>

           <th>Eliminar Venta</th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descuento)
            </td>

             <td>
                <a class="btn btn-primary" asp-action="Editar" asp-controller="Producto"  asp-route-id="@item.Id">Editar</a>
            </td>

             <td>
                <a class="btn btn-danger" asp-action="Eliminar" asp-controller="Producto"  asp-route-id="@item.Id">Eliminar</a>
            </td>

        </tr>
}
    </tbody>
</table>