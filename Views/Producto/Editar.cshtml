@model practica01.Models.Producto

@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center mt-5">

    <h1 class="display-4">Registro de ventas</h1>

    <form asp-action="Editar" asp-controller="Producto" method="POST" class="row g-2 align-items-center">

        <input type="hidden" asp-for="Id">

     <div class="col-12">

          <label asp-for="nombre" class="form-label">Nombre: </label>
          <input asp-for="nombre" type="text" class="form-control" placeholder="Nombre del producto ">
           <span asp-validation-for="nombre" class="text-danger"></span>

        </div>

       
       <div class="col-6">

          <label asp-for="precio" class="form-label">Precio: </label>
          <input asp-for="precio" class="form-control" placeholder="Precio del producto "  type="number" step="0.01">


       </div>

        <div class="col-6">

            <label class="form-label" >Seleccione la categoria</label>

            <select asp-for="categoria" class="form-select">
                <option selected disabled>Categoria...</option>
                <option value="+14">Mayores de 14</option>
                <option value="+18">Mayores de 18</option>
                <option value="APT">Apto para todo el publico</option>
                
              </select>

        </div>

        <div class="col-12">

          <label asp-for="descuento" class="form-label">Descuento: </label>
          <input asp-for="descuento" class="form-control" placeholder="Descuento del producto "  type="number" step="0.01">


       </div>

          

        <div>

          <button class="btn btn-info"> Modificar Venta </button>

        </div>




    </form>

     <div>

          <a asp-action="Listar" asp-controller="Producto" class="btn btn-success mt-2">Lista de ventas</a>

        </div>
   
     <h1 class="text-center">@ViewData["Mensaje"]</h1>
    
</div>